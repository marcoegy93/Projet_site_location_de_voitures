{% extends 'espace_utilisateur/index.html.twig' %}

{% block title %}
	Mon espace
{% endblock %}

{% block dashboard %}
    <style>
	.wrapper{
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  width: 80%;
  margin: 0 auto;
}

.wrapper .image .image_img{
  width: 100%;
  height: 100%;


}

.wrapper .image{
	position: relative;
	margin: 5%;
}

.wrapper .image .image_titlee{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 15%;
  text-shadow: 0.1em 0.1em 0.05em #333;
  font-size: 2em;
}
        #titre{
            text-align: center;
            background-color: lightblue;
            color: black;
            margin: 0 auto;
			padding: 0.5%;
            display: block;
            width: 80%;
            text-align: center;
            text-shadow: black 0.1em 0.1em 0.2em;
            font-style: italic;

        }

#case{
	color: lightblue;
}

#souscase{
	color: orange;
}

footer{
	background:black;
	color: white;
	padding-bottom: 10px;
	margin-bottom: -40px;
  text-align: center;
}

@media only screen and (min-width: 569px) and (max-width: 768px){
            .wrapper{
                grid-template-columns: repeat(1, 1fr);
                width: 80%;
            }
        }

		@media (max-width: 568px){
            .wrapper{
                grid-template-columns: repeat(1, 1fr);
                width: 90%;
            }
        }


</style>
<br><br><br><br>
<h3 id="titre">Bienvenue dans votre espace !</h3>
	<h4 id="titre">Voici quelques statistiques :</h4><br>
        <div class="wrapper">
            <div class="image" data-aos="fade-up">
                <img src="../Images/noir.jpg" class="image_img">
                <div class="image_titlee"><h4 id="case">Nombre de vehicules loués par vous:<br><h4 id="souscase">{{ infos[0] }} véhicule(s)</h4></h4></div>             
                
			</div>
			<div class="image" data-aos="fade-up" data-aos-delay="500">
                <img src="../Images/noir.jpg" class="image_img">
                <div class="image_titlee"><h4 id="case">Montant des locations(factures payés): <br><h4 id="souscase">{{ infos[2] }}€</h4></h4></div> 
            </div>
			<div class="image" data-aos="fade-up" data-aos-delay="500">
                <img src="../Images/noir.jpg" class="image_img">
                <div class="image_titlee"><h4 id="case">Nombre de véhicules loués non payées: <br><h4 style="color:red;">{{ infos[3] }} véhicule(s)</h4></h4></div> 
            </div>
			<div class="image" data-aos="fade-up" data-aos-delay="500">
                <img src="../Images/noir.jpg" class="image_img">
                <div class="image_titlee"><h4 id="case">Montant total des locations de ce mois: <br><h4 id="souscase"> {{ infos[4] }}€</h4></div> 
            </div>
			<div class="image" data-aos="fade-up" data-aos-delay="500">
                <img src="../Images/noir.jpg" class="image_img">
                <div class="image_titlee"><h4 id="case">Total de véhicules retournés: <br><h4 id="souscase"> {{ infos[5] }} véhicule(s)</h4></div> 
            </div>
		</div>	
    

{% endblock %}