{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<br><br><br><br><br><br>

<style>
    input:hover {
        border: 2px solid #6495ED;
        transform: scale(1.1);
    }
    form{
        display: block;
        margin: 0 auto;
        width: 40%;
    }
    input {
        height: 45px;
        width: 100%;
    }
    button {
    background-color: #000; 
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: block;
    margin: 0 auto;
    font-size: 16px;
    text-decoration: none;
    transition: all 0.5s;
    }

    #id_button{
        text-decoration: none;
    }

    ul li{
        color:red;
    }

    .alert{
        visibility: hidden;
    }

    .alert::before{
        content:'Mot de passe incorrect';
        visibility: visible;
        color: red;
    }
    #titre{
            text-align: center;
            background-color: lightblue;
            color: black;
            margin: 0 auto;
			padding: 0.5%;
            display: block;
            width: 80%;
            text-align: center;
            text-shadow: black 0.1em 0.1em 0.2em;
            font-style: italic;

        }
        footer{
	background:black;
	color: white;
	padding-bottom: 10px;
	margin-bottom: -40px;
  text-align: center;
}
    @media only screen and (max-width: 768px){
        form{
            display: block;
            margin: 0 auto;
            width: 90%;
        }
    }

    </style>
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 id="titre" class="h3 mb-3 font-weight-normal">Connexion</h1>
    <label for="inputEmail">Votre email :</label><br>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus><br><br>
    <label for="inputPassword">Votre mot de passe : </label><br>
    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required><br><br>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button id="id_button" type="submit">
        Se connecter
    </button>
</form><br><br><br><br><br><br><br>
{% endblock %}
